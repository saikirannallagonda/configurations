" Enable syntax highlighting
syntax on

" Set line numbers
set number
set relativenumber

" Set tab to 4 spaces
set tabstop=4
set shiftwidth=4
set expandtab

" Enable auto-indentation
filetype on
filetype plugin on
filetype indent on

" Set the encoding
set encoding=utf-8

" Highlight current line
set cursorline

" Enable mouse support
set mouse=a

" show commands as you type them
set sc

" highlight search matches
set hls

" recursive file search
set path+=**

" see possible completions
set wildmenu
set wildmode=list:longest,full

